<div class="container py-5">

  <h1 class="text-center my-5">ユーザー一覧</h1>

  <!-- 並び替えリンク -->
  <%= render 'admin/shared/sort_links' %>

  <div class="d-flex justify-content-center">
    <div class="table-responsive" style="max-width: 1100px;">

      <% if @users.present? %>
        <!-- ユーザー一覧 -->
        <%= render partial: "admin/users/user_table", locals: { users: @users } %>

        <div class="d-flex justify-content-center my-4">
          <%= paginate @users %>
        </div>

      <% else %>
        <p class="text-center">ユーザーはまだ登録されていません。</p>
      <% end %>

    </div>
  </div>

</div>
