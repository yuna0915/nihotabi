<h1 class="text-center my-5">
  <%= @user.nickname %>（<%= @user.last_name %> <%= @user.first_name %>／<%= @user.last_name_kana %> <%= @user.first_name_kana %>）さんの詳細
</h1>

<div class="d-flex justify-content-center" style="min-height: 80vh;">
  <div class="table-responsive" style="max-width: 800px;">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>姓</th>
          <td><%= @user.last_name %></td>
        </tr>
        <tr>
          <th>名</th>
          <td><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>セイ</th>
          <td><%= @user.last_name_kana %></td>
        </tr>
        <tr>
          <th>メイ</th>
          <td><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @user.prefecture.is_a?(Prefecture) ? @user.prefecture.name : @user.prefecture %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <span class="<%= @user.is_active? ? 'text-success' : 'text-danger' %>">
              <%= @user.is_active? ? "有効" : "退会" %>
            </span>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="text-center mt-5 mb-5">
      <%= link_to "編集する", edit_admin_user_path(@user), class: "custom-green-btn" %>
    </div>
  </div>
</div>
