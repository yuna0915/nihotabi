<h2>投稿一覧</h2>

<div class="table-responsive">
  <table class="table table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>画像</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= image_tag post.image.variant(resize_to_limit: [100, 100]), class: "img-thumbnail" %></td>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td><%= link_to post.user.nickname, admin_user_path(post.user), class: "text-decoration-none" %></td>
          <td><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td>
            <%= link_to "削除", admin_post_path(post),
                        method: :delete,
                        data: { confirm: "本当に削除しますか？" },
                        class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
