<!-- 1件のコメント表示用テンプレート -->
<div class="comment mb-4 p-3 border-bottom" id="comment-<%= comment.id %>">
  <div class="mb-2">
    <%= simple_format(comment.body) %>
  </div>

  <div class="text-start">
    <small class="text-muted">
      <% if user_signed_in? %>
        <%= link_to "#{comment.user.nickname}（#{comment.created_at.strftime('%Y/%m/%d %H:%M')}）", my_page_user_path(comment.user, from: 'post'), class: "text-decoration-none" %>
      <% else %>
        <span style="color: black;"><%= "#{comment.user.nickname}（#{comment.created_at.strftime('%Y/%m/%d %H:%M')}）" %></span>
      <% end %>
    </small>
  </div>

  <% if comment.user == current_user %>
    <div class="text-end mt-1">
      <%= link_to "削除", post_comment_path(comment.post, comment),
                  method: :delete,
                  data: { confirm: "削除しますか？" },
                  class: "custom-red-btn btn-sm" %>
    </div>
  <% end %>
</div>
