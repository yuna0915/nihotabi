<h2>ユーザー情報</h2>

<table class="table table-borderless">
  <tbody>
    <tr>
      <td>氏名</td>
      <td>姓</td>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <td></td>
      <td>名</td>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>セイ</td>
      <td><%= @user.last_name_kana %></td>
    </tr>
    <tr>
      <td></td>
      <td>メイ</td>
      <td><%= @user.first_name_kana %></td>
    </tr>
    <tr>
      <td>ニックネーム</td>
      <td></td>
      <td><%= @user.nickname %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td></td>
      <td><%= @user.phone_number %></td>
    </tr>
    <tr>
      <td>都道府県</td>
      <td></td>
      <td><%= @user.prefecture.is_a?(Prefecture) ? @user.prefecture.name : @user.prefecture %></td>
    </tr>
  </tbody>
</table>

<div class="text-center mt-3">
  <%= link_to "プロフィールを編集", edit_user_path, class: "btn btn-primary" %>
  <%= link_to "マイページへ戻る", my_page_user_path(@user), class: "btn btn-secondary" %>
</div>
