<!DOCTYPE html>
<html>
  <head>
    <title>Nihotabi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google Fonts を追加 -->
    <link href="https://fonts.googleapis.com/css2?family=Shippori+Antique+B1&display=swap" rel="stylesheet">

    <!-- Font Awesome CDN 追加 -->
    <script src="https://kit.fontawesome.com/c6d2862341.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <!-- ✅ メインコンテンツ -->
    <div class="container-fluid mt-4">
      <div class="row">

        <!-- ✅ サイドバー表示条件 -->
        <% if controller_path.start_with?("public") &&
              !controller_path.start_with?("public/users", "public/homes", "public/sessions", "public/registrations") %>
          <div class="col-md-3">
            <%= render 'public/shared/genre_sidebar' %>
          </div>
        <% end %>

        <!-- ✅ メイン領域 -->
        <div class="<%= controller_path.start_with?("public/users", "public/homes", "public/sessions", "public/registrations", "public/posts") ? 'col-12' : 'col-md-9' %>">
          <%= yield %>
        </div>

      </div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
