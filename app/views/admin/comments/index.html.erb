<div class="container py-5">

  <h1 class="text-center my-5">コメント一覧</h1>

  <!-- 並び替えリンク -->
  <%= render 'admin/shared/sort_links' %>

  <% if @comments.present? %>
    <div class="d-flex justify-content-center">
      <div class="table-responsive" style="max-width: 1100px; width: 100%;">
        <!-- コメント一覧テーブル -->
        <%= render partial: "admin/comments/comment_table", locals: { comments: @comments } %>
      </div>
    </div>

    <div class="d-flex justify-content-center my-4">
      <%= paginate @comments %>
    </div>
  <% else %>
    <p class="text-center">コメントはまだありません。</p>
  <% end %>
</div>
