<h1>投稿フォーム</h1>

<%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.label :location_name, "場所名" %><br>
    <%= f.text_field :location_name %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :prefecture_id, "都道府県" %><br>
    <%= f.select :prefecture_id, options_for_select(
      [
        "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県",
        "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県",
        "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県",
        "岐阜県", "静岡県", "愛知県", "三重県",
        "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県",
        "鳥取県", "島根県", "岡山県", "広島県", "山口県",
        "徳島県", "香川県", "愛媛県", "高知県",
        "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"
      ].map.with_index(1) { |name, i| [name, i] }
    ), { include_blank: "選択してください" } %>
  </div>

  <div class="form-group">
    <%= f.label :visited_month_id, "訪問月" %><br>
    <%= f.select :visited_month_id, options_for_select(
      (1..12).map { |m| ["#{m}月", m] }
    ), { include_blank: "選択してください" } %>
  </div>

  <div class="form-group">
    <%= f.label :visited_hour_id, "訪問時間帯" %><br>
    <%= f.select :visited_hour_id, options_for_select(
      (0..23).map { |h| ["#{format('%02d', h)}:00〜#{format('%02d', (h + 1) % 24)}:00", h] }
    ), { include_blank: "選択してください" } %>
  </div>

  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>
