<!DOCTYPE html>
<html>
  <head>
    <title>Nihotabi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- ✅ Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- ✅ ヘッダー -->
    <header class="bg-light p-3 border-bottom">
      <div class="container">
        <%= render 'layouts/header' %>
      </div>
    </header>

    <!-- ✅ メイン -->
    <div class="container-fluid mt-4">
      <div class="row">
        <% unless controller_path.start_with?("public/users", "public/homes", "public/sessions", "public/registrations","public/posts" ) %>
          <div class="col-md-3">
          <div class="col-md-3">
            <%= render 'public/shared/genre_sidebar' %>
          </div>
        <% end %>
        <div class="<%= controller_path.start_with?('public/users', 'public/homes', 'public/sessions', 'public/registrations',"public/posts") ? 'col-12' : 'col-md-9' %>">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
