<header>
  <div>
    <% if user_signed_in? %>
      <div>
        <span>ようこそ、<%= current_user.nickname %>さん！</span>
      </div>
    <% end %>
  </div>

  <div>
    <ul class="nav">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "マイページ", my_page_user_path(current_user) %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li class="nav-item">
           <%= link_to 'Top', root_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path %>
        </li>
        <li class="nav-item">
          <%= link_to '新規登録', new_user_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログイン', new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</header>