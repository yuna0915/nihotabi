<% from ||= nil %>

<div class="col-12 mb-4">
  <div class="card h-100 p-4 d-flex align-items-center flex-md-row text-start gap-4">
    <% if user.profile_image.attached? %>
      <%= link_to my_page_user_path(user, from: from) do %>
        <%= image_tag user.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle" %>
      <% end %>
    <% end %>

    <div>
      <p class="mb-2">
        <strong>ニックネーム：</strong>
        <%= link_to user.nickname, my_page_user_path(user, from: from), class: "text-decoration-none" %>
      </p>
      <p class="mb-0">
        <strong>都道府県：</strong><%= user.prefecture %>
      </p>
    </div>
  </div>
</div>
