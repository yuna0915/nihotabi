<div class="col">
  <div class="mb-4">
    <div class="card h-100 position-relative">

      <!-- ТіЋуе┐ућ╗тЃЈсЃфсЃ│сѓ» -->
      <%= link_to post_path(post, from: from || nil) do %>
        <%= image_tag post.get_post_image(300, 200), class: "card-img-top" %>
      <% end %>

      <div class="card-body position-relative">

        <!-- сѓ┐сѓцсЃѕсЃФсЂ«сЂ┐ -->
        <h4 class="card-title mb-2">
          <%= link_to post.title, post_path(post, from: from || nil), class: "text-decoration-none text-dark" %>
        </h4>

        <!-- ТіЋуе┐УђЁ -->
        <div class="d-flex align-items-center mb-2">
          <%= image_tag post.user.get_profile_image(40, 40), class: "rounded-circle me-2", alt: "ТіЋуе┐УђЁућ╗тЃЈ" %>
          <p class="mb-0"><strong><%= post.user.nickname %></strong></p>
        </div>

        <!-- ТіЋуе┐ТЃЁта▒ -->
        <p class="card-text">та┤ТЅђ№╝џ<%= post.location_name %></p>
        <p class="card-text">ТіЋуе┐ТЌЦ№╝џ<%= l(post.created_at, format: :short) %></p>
        <p class="card-text">­Ъњг№╝џ<%= post.comments.count %>С╗Х</p>

        <!-- сЂёсЂёсЂГТЋ░ -->
        <p class="card-text" id="favorite-count-<%= post.id %>">
          РЮц№ИЈ№╝џ<%= post.favorites.count %>С╗Х
        </p>

        <!-- сЂёсЂёсЂГсЃюсѓ┐сЃ│ -->
        <div id="favorite-button-<%= post.id %>">
          <%= render 'public/posts/favorite_button', post: post %>
        </div>

      </div>
    </div>
  </div>
</div>
